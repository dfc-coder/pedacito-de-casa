---
// src/components/VideoPage.astro
import background from "../assets/background.svg";
import HeartRain from "./HeartRain.astro";
import HeroText from "./HeroText.astro";
import CountDown from "./CountDown.astro";
import VideoBox from "./VideoBox.astro";
import Marquee from "./Marquee.astro";
---

<div id="container">
	<img id="background" src={background.src} alt="" fetchpriority="high" />
	<HeartRain />
	<main style="position: relative; z-index: 1;">
		<HeroText />
		<VideoBox bucket="videos" />
		<CountDown />
	</main>
	<Marquee />
</div>

<style>
	@import url("https://fonts.googleapis.com/css2?family=Emilys+Candy&display=swap");

	#background {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: -3;
		filter: blur(100px);
	}

	#container {
		display: flex;
		flex-direction: column;
		justify-content: space-between;
		font-family: "Emilys Candy", serif;
		font-weight: 400;
		font-style: normal;
		min-height: 100vh;
		margin: 0;
		padding: 0;
	}

	main {
		flex: 1;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: start;
		padding: 2rem;
		gap: 1rem;
		overflow: hidden;
	}
</style>
